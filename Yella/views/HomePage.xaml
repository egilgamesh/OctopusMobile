<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
						xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
						xmlns:yella="clr-namespace:Yella"
						x:Class="Yella.views.HomePage" Shell.NavBarIsVisible="False">
	<ContentPage.Content>
		<Grid RowDefinitions="2*, 6*, 1.5*,12*">

			<!--<StackLayout Orientation="Horizontal" Grid.Row="0" BackgroundColor="White">-->
				<Grid Grid.Row="0" Margin="25" ColumnDefinitions="7*,9*,2*,1*">
					<Image Grid.Column="0" x:Name="HomePageTitle" Source="yella" WidthRequest="180"></Image>
					<Image Grid.Column="2" Source="octopus" WidthRequest="50" HeightRequest="50">
						<Image.Clip>
							<EllipseGeometry Center="25,25" RadiusX="15" RadiusY="15" />
						</Image.Clip>
					</Image>
				</Grid>

			<!--</StackLayout>-->

			<Frame Grid.Row="1" BackgroundColor="AntiqueWhite">

			</Frame>
			<Frame Grid.Row="2" BackgroundColor="AntiqueWhite">

			</Frame>
			<Frame Grid.Row="3" BackgroundColor="AntiqueWhite">

			</Frame>

		</Grid>
	</ContentPage.Content>
</ContentPage>