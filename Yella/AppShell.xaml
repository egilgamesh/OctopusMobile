<?xml version="1.0" encoding="UTF-8"?>

<Shell
	x:Class="Yella.AppShell"
	xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:local="clr-namespace:Yella.views"
	Shell.FlyoutBehavior="Disabled">

	<ShellContent
		Title="Introduction"
		ContentTemplate="{DataTemplate local:IntroPage}"
		Route="IntroPage" />
	<TabBar Route="DashboardTab">


		<Tab Title="اعدادات" Icon="ellipsissolid">
			<ShellContent
				ContentTemplate="{DataTemplate local:SettingsPage}"
				Route="SettingsPage" />
		</Tab>
		<Tab Title="تتبع" Icon="check_slot_solid">
			<ShellContent
				ContentTemplate="{DataTemplate local:TrackPage}"
				Route="TrackPage" />
		</Tab>

		<Tab Title="جديد" Icon="circlesolid">
			<ShellContent
				ContentTemplate="{DataTemplate local:NewOrderPage}"
				Route="NewOrderPage" />
		</Tab>
		<Tab Title="الرصيد" Icon="fileinvoicedollar">
			<ShellContent
				ContentTemplate="{DataTemplate local:BalancePage}"
				Route="BalancePage" />
		</Tab>
		<Tab Title="الرئيسية" Icon="housesolid">
			<ShellContent
				ContentTemplate="{DataTemplate local:HomePage}"
				Route="HomePage" />
		</Tab>
	</TabBar>
</Shell>